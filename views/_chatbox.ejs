<% if(locals.user) {%>
    <div id="chat-icon" class="chat-icon show-chat-icon"><i class="fa-solid fa-comments"></i></div>
    <div id="user-chat-box" class="user-chat-box hide">
        <i id='hide-chatbox-button' class="fa-regular fa-circle-xmark"></i>
        <ul id="chat-message-list"></ul>

        <div id="chat-message-input-container">
            <input id="chat-message-input" placeholder="Type message Here">
            <button id="send-message">
                <!-- <i class="fa-solid fa-arrow-right"></i> -->
                <i class="fa-solid fa-paper-plane"></i>
            </button>
        </div>
    </div>

<%}%>