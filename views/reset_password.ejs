<link rel="stylesheet" type="text/css" href="<%= assetPath('css/signin.css') %>">

<form action="/users/reset_password" method="post">
    <h1>Reset Password!</h1>
    <small>Note! Otp is only valid for 5 minutes</small>
    <input type="text" name="token" placeholder="Enter your OTP here" required>
    <input type="password" name="password" placeholder="Password" required>
    <input type="password" name="confirm_password" placeholder="Confirm Password" required>
    <input type="submit" placeholder="Submit">
</form>