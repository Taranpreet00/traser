<link rel="stylesheet" type="text/css" href="/css/signin.css">

<form action="/users/signin/create-session" method="post">
    <h1>Signin</h1>
    <input name="email" type="email" placeholder="Email" required>
    <input name="password" type="password" placeholder="Password" required>
    <button type="submit">Submit</button>
    <p>
        <a href="/users/signup">Don't have an account? Sign up <span class="highlight">here</span></a>
    </p>
    <p id="other-login">
        Or You can Login with: 
        <br>
        <a href="/users/auth/google"><img src="/images/Google_logo.png" alt="Google Signin/Signup"></a>
    </p>
</form>